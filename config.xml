<?xml version='1.0' encoding='utf-8'?>
<widget id="com.seacowtech.covid19" version="1.0.0" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Coronavirus (COVID-19)</name>
    <description>
        H5 App that track Coronavirus (COVID-19) status in Australia
    </description>
    <author email="cs.pangge@gmail.com" href="https://pangge.me">
        Ran Tao
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <hook type="before_compile" src="hooks/vue-build.js"/>
</widget>
